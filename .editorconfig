# See https://spec.editorconfig.org/

root = true

charset = utf-8
indent_size = 8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.bas]
indent_style = space
end_of_line = crlf

[*.{erl,hrl,app,app.src}]
indent_size = 4
indent_style = space

[*.java]
indent_size = 4

[*.js]
indent_size = 4
indent_style = space

# .f should be Fortran, but alas some people.
[*.{p4,f,fs,fth,4th}]
indent_size = 4
indent_style = tab

[*.diff]
trim_trailing_whitespace = false

[*.md]
indent_style = space
trim_trailing_whitespace = false
