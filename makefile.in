.POSIX :

########################################################################
### No further configuration beyond this point.
########################################################################

.SUFFIXES :
A = .@LIBEXT@
O = .@OBJEXT@
E = @EXEEXT@
.SUFFIXES : .c $O $E

platform	= @platform@
prefix		= @prefix@
exec_prefix	= @exec_prefix@

VPATH		:= @srcdir@
srcdir		:= @srcdir@
top_srcdir	:= @top_srcdir@
abs_srcdir	:= @abs_srcdir@
rel_tardir	:= @rel_tardir@

builddir	:= @builddir@
top_builddir	:= @top_builddir@
abs_builddir	:= @abs_builddir@

bindir		:= @bindir@
libdir		:= @libdir@/post4
datarootdir	:= @datarootdir@/post4

TOPDIR	 	= @abs_top_srcdir@
TARDIR   	= ${TOPDIR}/../

TARNAME 	= @PACKAGE_TARNAME@
MD5SUM		= @MD5SUM@
AUTOCONF	= @AUTOCONF@
TAR_I		= @TAR_I@

COMMIT		:= $$(git describe --tags)
VERSION		:= $$(git tag --list | sed -n '/^v[0-9]/s/v//p' | tail -n1)

########################################################################
### No further configuration beyond this point.
########################################################################

.SUFFIXES :
O = .@OBJEXT@
E = @EXEEXT@
.SUFFIXES : .c $O $E

BUILD_DIRS = \
	${TOPDIR}/src

CLEAN_DIRS = \
	${TOPDIR}/examples \
	${TOPDIR}/doc \
	${TOPDIR}/src

.MAIN : build

build :
	@for i in $(BUILD_DIRS); do ( cd $$i; ${MAKE} ${MAKEFLAGS} $@ ); done

clean : title _clean
	@for i in $(BUILD_DIRS); do ( cd $$i; ${MAKE} ${MAKEFLAGS} $@ ); done

distclean : title _distclean
	@for i in $(BUILD_DIRS); do ( cd $$i; ${MAKE} ${MAKEFLAGS} $@ ); done

realclean : title _realclean
	@for i in $(BUILD_DIRS); do ( cd $$i; ${MAKE} ${MAKEFLAGS} $@ ); done

test : build
	@cd $@; $(MAKE) $@

title :
	@echo
	@echo '***************************************************************'
	@echo '==>' ${abs_srcdir}
	@echo '***************************************************************'
	@echo

_clean :
	rm -rf autom4te.cache configure.lineno core *.core core.*
	find . \( -name 'tmp.*' -o -name '*.core' \) -exec rm -f \{\} \;

_distclean : _clean
	rm -f *.log config.status configure.scan configure~ makefile MANIFEST.TXT

_realclean : _distclean
	rm -f configure *.md5

install: build
	install -p -o root -g 0 -d ${libdir}
	install -p -o root -g 0 -d ${datarootdir}
	install -p -o root -g 0 ./src/post4 ${bindir}
	install -p -o root -g 0 ./src/post4.p4 ${libdir}
	install -p -o root -g 0 ./README.md ${datarootdir}
	install -p -o root -g 0 ./examples/ed.p4 ${libdir}
	install -p -o root -g 0 ./examples/cat.p4 ${libdir}
	install -p -o root -g 0 ./examples/life.p4 ${libdir}
	install -p -o root -g 0 ./examples/life1d.p4 ${libdir}
	install -p -o root -g 0 ./examples/lifo.p4 ${libdir}
	install -p -o root -g 0 ./examples/rand.p4 ${libdir}
	install -p -o root -g 0 ./examples/wumpus.p4 ${libdir}
	install -p -o root -g 0 ./examples/dumpargs.p4 ${libdir}

config.status : configure
	./configure

configure : configure.ac aclocal.m4
	${AUTOCONF} -f

makefile: makefile.in config.status
	./config.status makefile

list:
	git ls-tree --full-tree -r --name-only HEAD

snapshot:
	@echo
	@echo '***************************************************************'
	git archive --format=tar.gz --prefix=${TARNAME}-${COMMIT}/ ${COMMIT} >../${TARNAME}-${COMMIT}.tar.gz
	@echo '***************************************************************'
	@${MD5SUM} ../${TARNAME}-${COMMIT}.tar.gz | tee ../${TARNAME}-${COMMIT}.md5
	@echo '***************************************************************'
	@echo

tar: MANIFEST.TXT
	@echo
	@echo '***************************************************************'
	tar -C .. ${TAR_I} MANIFEST.TXT -zcf ../${TARNAME}-${VERSION}.tar.gz
	@echo '***************************************************************'
	@${MD5SUM} ../${TARNAME}-${VERSION}.tar.gz | tee ../${TARNAME}-${VERSION}.md5
	@echo '***************************************************************'
	@echo
